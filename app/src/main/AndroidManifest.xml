<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gklausan.becafilms">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_movie_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_movie_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BecaFilms">
        <activity
            android:name=".presenter.view.SplashScreenActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presenter.view.MainActivity"
            android:exported="true" />
        <activity
            android:name=".presenter.view.MovieDetailsActivity"
            android:exported="true" />
    </application>

</manifest>